     <select id="selectProductList" resultType="com.ToyProject.product.vo.ProductVo">
		  SELECT * FROM PRODUCT A, CATEGORY B
       WHERE A.CATEGORY_NO=B.CATEGORY_NO
       AND (
         B.CATEGORY_NO=#{categoryNo}
          or B.UP_ID=#{categoryNo}
          or B.TOP_ID=#{categoryNo}
       )
    </select>
  
